<%- include('partials/_header') %>

<h2 class="offset-md-2 mb-4">Hello, This is a greeting from the creator of this abomination to you.</h2>
<div class="container-fluid">
  <div class="row">
    <!-- FORM-->
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
      <div class="card"> 
        <div class="card-body">
          <h3 class="offset-md-4">Add a Task</h3>
          <form action="/add" method="post">
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="title"
                placeholder="Add a Title"
              />
            </div>
            <div class="form-group mb-4">
              <textarea
                class="form-control"
                name="description"
                cols="80"
                placeholder="Add a Description"
              ></textarea>
            </div>
            <button class="btn btn-primary btn-block offset-md-5" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- LIST-->
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operation</th>
          </tr>
        </thead>
        <tbody>
          <%for(var i = 0; i < tasks.length; i++){%>
          <tr>
            <td><%= i+1 %></td>
            <td><%= tasks[i].title%></td>
            <td><%= tasks[i].description%></td>
            <td>
                <div class="btn-group d-flex justify-content-center">
                    <a
                    href="/turn/<%= tasks[i]._id%>"
                    class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark'%>"
                    >Done</a
                  >
                  <a href="/delete/<%= tasks[i]._id%>" class="btn btn-danger "
                    >Delete</a
                  >
                  <a href="/edit/<%= tasks[i]._id%>" class="btn btn-info ">Edit</a>
                </div>
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/_footer')%>
